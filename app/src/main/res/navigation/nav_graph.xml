<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/launch_navigation"
        app:startDestination="@id/searchFragment">

    <fragment
            android:id="@+id/searchFragment"
            android:name="com.chart.test.app.ui.search.SearchFragment"
            android:label="SearchFragment">
        <action
                android:id="@+id/action_searchFragment_to_chartFragment"
                app:destination="@id/chartFragment" />
    </fragment>

    <fragment
            android:id="@+id/chartFragment"
            android:name="com.chart.test.app.ui.chart.ChartFragment"
            android:label="ChartFragment" />

</navigation>